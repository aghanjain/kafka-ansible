[Unit]
Description=Apache Zookeeper server
Requires=network.target
After=network.target

[Service]
Type=simple
User={{ kafka_user }}
Group={{ kafka_group }}
ExecStart={{ kafka_install_dir_linux }}/bin/zookeeper-server-start.sh {{ kafka_install_dir_linux }}/config/zookeeper.properties
ExecStop={{ kafka_install_dir_linux }}/bin/zookeeper-server-stop.sh
Restart=on-failure

[Install]
WantedBy=multi-user.target
